#!/bin/bash

BOLD="\e[1m"
BOLDYELLOW="\e[1m\e[1;33m"
END="\e[0m"

echo ""
echo -e "${BOLDYELLOW}Informations :${END}"
echo -e "- ${BOLD}Hostname${END} = $(hostname -f)"
echo -e "- ${BOLD}IP${END} = $(hostname -I | awk '{print $1}')"
echo -e "- ${BOLD}Date${END} = $(date)"
echo ""
echo -e "${BOLDYELLOW}Système :${END}"
echo -e "- ${BOLD}Version OS${END} = $(lsb_release -d | cut -d "	" -f 2)"
echo -e "- ${BOLD}Uptime${END} =$(uptime| cut -d ',' -f 1)"
echo -e "- ${BOLD}Kernel${END} = $(uname -r)"
echo -e "- ${BOLD}Utilisateurs${END} = $(uptime | cut -d "," -f 2 | awk '{print $1}') connecté(s)"
echo ""
echo -e "${BOLDYELLOW}Mémoire :${END}"
echo -e "- ${BOLD}Utilisation RAM${END} = $(free -m | head -n 2 | tail -n 1 | awk '{print $3}') Mb sur $(free -m | head -n 2 | tail -n 1 | awk '{print $2}') Mb soit $(free -m | head -n 2 | tail -n 1 | awk '{print $4}') Mb de libre"
echo ""
echo -e "${BOLDYELLOW}Disques :${END}"
echo -e "- ${BOLD}Utilisation de /${END} = $(df -h | grep -w / | awk '{print $5}')"
echo -e "- ${BOLD}Utilisation de /home${END} = $(df -h | grep -w /home | awk '{print $5}')"
echo -e "- ${BOLD}Utilisation de /tmp${END} = $(df -h | grep -w /tmp | awk '{print $5}')"
echo -e "- ${BOLD}Utilisation du swap${END} = $(free -m | head -n 3 | tail -n 1 | awk '{print $3}') Mb"
echo ""
